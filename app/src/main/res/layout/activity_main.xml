<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shal25"
    android:soundEffectsEnabled="true"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/text_titel"
        android:layout_width="333dp"
        android:layout_height="44dp"
        android:background="#1EFFFFFF"
        android:fontFamily="@font/aclonica"
        android:linksClickable="false"
        android:longClickable="false"
        android:singleLine="false"
        android:text="SOS Restaurant"
        android:textAllCaps="false"
        android:textColor="#181617"
        android:textColorHint="#00F3B7B7"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="@font/aclonica"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.189" />

    <Button
        android:id="@+id/button_manger"
        android:layout_width="204dp"
        android:layout_height="78dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/aclonica"
        android:text="Manager"
        android:textColorHint="#EEB3B3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_workers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_titel" />

    <Button
        android:id="@+id/button_workers"
        android:layout_width="204dp"
        android:layout_height="78dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/aclonica"
        android:text="employees"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_members"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_manger" />

    <Button
        android:id="@+id/button_members"
        android:layout_width="205dp"
        android:layout_height="82dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="53dp"
        android:fontFamily="@font/aclonica"
        android:text=" club members"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_workers" />

</androidx.constraintlayout.widget.ConstraintLayout>